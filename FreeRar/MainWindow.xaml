<Window x:Class="FreeRar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FreeRar"
        mc:Ignorable="d"
        Style="{StaticResource MainWindow}">

    <Grid>

        <Menu Style="{StaticResource MnHead}">

            <MenuItem Header="Файл">

                <MenuItem Header="Архивирование" Click="BtnArchive_Click"/>
                <MenuItem Header="Разорхивирование" Click="BtnUnArchive_Click"/>
                <MenuItem Header="Выход" Name="MnItExit" Click="MenuItemExit_Click"/>

            </MenuItem>

        </Menu>

        <StackPanel Style="{StaticResource StpCenterVert}">

            <StackPanel Style="{StaticResource StpSmoothHor}">

                <Button Name="BtnArchive" Click="BtnArchive_Click" Content="Архивирование" Style="{StaticResource BtnCore}"/>
                <Button Name="BtnUnArchive" Click="BtnUnArchive_Click" Content="Разорхивирование" Style="{StaticResource BtnCore}"/>

            </StackPanel>
            
        </StackPanel>
        
    </Grid>

</Window>
